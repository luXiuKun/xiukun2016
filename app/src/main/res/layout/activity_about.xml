<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/activity_main_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">


         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/dd_dimen_30px"
             android:background="@drawable/logo"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:textSize="16sp"
             android:text="记钟宝"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/dd_dimen_20px"
             android:text="足浴养生门店云管理应用"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/dd_dimen_10px"
             android:text="10万门店的共同选择"/>


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="16sp"
             android:lineSpacingExtra="10dp"
             android:layout_marginLeft="@dimen/dd_dimen_20px"
             android:layout_marginRight="@dimen/dd_dimen_20px"
             android:layout_marginTop="@dimen/dd_dimen_20px"
             android:text="@string/about_text"/>



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dd_dimen_20px"
             android:gravity="center_vertical|center_horizontal"
             android:orientation="horizontal">

             <View
                 android:layout_width="100dp"
                 android:layout_height="1dp"
                 android:background="@color/viewline">


             </View>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dd_dimen_30px"
                 android:textSize="20sp"
                 android:text="联系我们"/>
             <View
                 android:layout_width="100dp"
                 android:layout_height="1dp"
                 android:layout_marginLeft="@dimen/dd_dimen_30px"
                 android:background="@color/viewline">


             </View>


         </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_about_phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:text="联系电话"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:text="010-5339-6609"/>

        </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/gray_line"
             android:layout_marginLeft="@dimen/dd_dimen_30px"
             android:layout_marginTop="@dimen/dd_dimen_10px"></View>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dd_dimen_20px"
             android:paddingLeft="@dimen/dd_dimen_30px"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/img_about_email"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dd_dimen_20px"
                 android:text="  邮        箱"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dd_dimen_30px"
                 android:text="service@jizhongbao.net"/>

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/gray_line"
             android:layout_marginLeft="@dimen/dd_dimen_30px"
             android:layout_marginTop="@dimen/dd_dimen_10px"></View>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dd_dimen_20px"
             android:layout_marginRight="@dimen/dd_dimen_20px"
             android:paddingLeft="@dimen/dd_dimen_30px"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/img_about_address"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dd_dimen_20px"
                 android:text="  地         址"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/dd_dimen_30px"
                 android:text="北京市朝阳区东四环中路金隅大成国际中心2号楼A2座17层"/>

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/gray_line"
             android:layout_marginLeft="@dimen/dd_dimen_30px"
             android:layout_marginTop="@dimen/dd_dimen_10px"></View>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="@dimen/dd_dimen_50px"
             android:text="北京记钟宝科技有限公司"/>

     </LinearLayout>


    </ScrollView>

</LinearLayout>
