<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >



    <RelativeLayout
        android:id="@+id/rl_account_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_account_nojyjl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_nojyjl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/img_account_nojyjl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_5px"
            android:text="暂无交易记录"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/lv_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/blacktext"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dd_dimen_20px"
        android:text="每工作日16:00到账前日金额"/>

</RelativeLayout>
