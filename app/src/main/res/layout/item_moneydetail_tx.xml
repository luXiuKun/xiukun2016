<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dd_dimen_20px"
    android:paddingBottom="@dimen/dd_dimen_20px"
    >


    <TextView
        android:id="@+id/tv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:text="提现"/>

    <TextView
        android:id="@+id/tv_tx_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tx"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:text="2016.07.25 16:00"/>


    <TextView
        android:id="@+id/tv_tx_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_tx_time"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:textSize="20sp"
        />


</RelativeLayout>
