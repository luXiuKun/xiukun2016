<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_msg_bg"
    android:gravity="center_vertical"
    android:padding="@dimen/dd_dimen_30px">

    <ImageView
        android:id="@+id/img_partnermsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_partner_msg"/>

    <TextView
        android:id="@+id/tv_partnermsg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_partnermsg"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:textSize="18sp"
        android:text="验证提醒"/>

    <TextView
        android:id="@+id/tv_partnermsg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_partnermsg"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:maxLength="15"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/tv_partnermsg_title"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:text="有小伙伴提醒您开通合伙人啦!"/>

    <TextView
        android:id="@+id/tv_partnermsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="这是时间"/>

</RelativeLayout>
