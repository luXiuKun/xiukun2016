<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/activity_main_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:text="姓        名"/>

        <EditText
            android:id="@+id/et_bindbank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@null"
            android:maxLength="5"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:hint="请填写真实姓名"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"></View>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:text="银行卡号"/>

        <EditText
            android:id="@+id/et_bindbank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@null"
            android:maxLength="21"
            android:digits="0123456789"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:hint="请填写您的银行卡号"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_line">
    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_40px"
        android:paddingBottom="@dimen/dd_dimen_40px"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:text="所属银行"/>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_bindbank_banklogo"
            android:layout_width="40dp"
            android:layout_height="30dp"
            fresco:placeholderImageScaleType="focusCrop"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            />


        <TextView
            android:id="@+id/tv_bindbank_bankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            />

    </LinearLayout>


    <ImageButton
        android:id="@+id/ib_bindbank_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:background="@drawable/img_confirm_bg"/>

</LinearLayout>
