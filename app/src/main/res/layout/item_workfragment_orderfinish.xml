<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dd_dimen_20px"
    android:orientation="vertical"
    android:background="@drawable/img_orderfinish_bg"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_orderfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_orderfinish"/>


        <TextView
            android:id="@+id/tv_orderfinish_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_orderfinish"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:text="项目名称"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_centerVertical="true"
            android:background="@drawable/img_orderfinish_housenum_bg"
            />

        <LinearLayout
            android:layout_width="@dimen/dd_dimen_100px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_orderfinish_proname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_55px"
            android:layout_centerVertical="true"
            android:orientation="vertical">




        <TextView
            android:id="@+id/tv_orderfinish_housenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/tab_bg"
            android:text="1232房"/>

        </LinearLayout>



    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"
        android:layout_marginTop="@dimen/dd_dimen_10px">

    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px">


        <TextView
            android:id="@+id/tv_finishnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="订  单  号:"/>

        <TextView
            android:id="@+id/tv_orderfinish_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_finishnum"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="订单号"/>


        <TextView
            android:id="@+id/tv_orderfinish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_orderfinish_num"
            android:layout_alignBottom="@+id/tv_orderfinish_num"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间:"/>

        <TextView
            android:id="@+id/tv_orderfinish_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_orderfinish_time"
            android:layout_alignBottom="@+id/tv_orderfinish_time"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间"/>





        <TextView
            android:id="@+id/tv_pztype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orderfinish_num"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="上钟方式:"/>

        <TextView
            android:id="@+id/tv_orderfinish_patype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pztype"
            android:layout_alignBottom="@+id/tv_pztype"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="上钟方式"/>


        <TextView
            android:id="@+id/tv_khident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pztype"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="客户身份:"/>

        <TextView
            android:id="@+id/tv_orderfinish_kkident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_khident"
            android:layout_alignBottom="@+id/tv_khident"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="7.7:"/>




        <TextView
            android:id="@+id/tv_jsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_khident"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="结算金额:"/>

        <TextView
            android:id="@+id/tv_orderfinish_jsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_jsprice"
            android:layout_alignBottom="@+id/tv_jsprice"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="10000"/>


        <TextView
            android:id="@+id/tv_orderfinish_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_jsprice"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="提成金额:"/>

        <TextView
            android:id="@+id/tv_orderfinish_tcprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_orderfinish_tc"
            android:layout_alignBottom="@+id/tv_orderfinish_tc"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:text="1000"/>


         <ImageButton
             android:id="@+id/ib_orderfinish_fz"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/tv_orderfinish_tcprice"
           android:layout_alignParentRight="true"
           android:background="@drawable/img_ordervip_fz"/>



    </RelativeLayout>

</LinearLayout>
