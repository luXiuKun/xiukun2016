<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fangzhurapp.technicianport.activity.PartnerCityActivity">

    <include layout="@layout/activity_main_title"></include>

    <ListView
        android:id="@+id/lv_partner_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp">

    </ListView>

    <RelativeLayout
        android:id="@+id/rl_partnercity_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >



        <ImageView
            android:id="@+id/img_partnercity_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_sjys_nodata"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_partnercity_nodata"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:text="暂无信息"/>


    </RelativeLayout>


</LinearLayout>
