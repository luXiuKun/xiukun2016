<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dd_dimen_20px"
    android:paddingBottom="@dimen/dd_dimen_20px"
    >


    <TextView
        android:id="@+id/tv_moneydetail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:text="项目订单收入"/>

    <TextView
        android:id="@+id/tv_moneydetail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_moneydetail_type"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:text="2016.07.25 16:00"/>


    <TextView
        android:id="@+id/tv_moneydetail_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_tx_time"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:textColor="@color/tab_bg"
        android:textSize="20sp"
        android:text="asdasd"
        />
    
    <TextView
        android:id="@+id/tv_moneydetail_zmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31"
        android:layout_alignBottom="@+id/tv_moneydetail_time"
        android:layout_toLeftOf="@+id/tv_moneydetail_poundage"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_moneydetail_poundage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123"
        android:layout_alignBottom="@+id/tv_moneydetail_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:textSize="13sp"/>




</RelativeLayout>
