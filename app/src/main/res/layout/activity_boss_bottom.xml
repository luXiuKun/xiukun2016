<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dd_dimen_10px"
    android:paddingBottom="@dimen/dd_dimen_10px"
    android:background="@color/buttom_bg">

    <LinearLayout
        android:id="@+id/ll_bossmain_performance"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bossmain_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_boss_performance_nor"/>

        <TextView
            android:id="@+id/tv_bossmain_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业绩"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bossmain_wallet"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bossmain_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_boss_wallet_nor"/>

        <TextView
            android:id="@+id/tv_bossmain_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bossmain_myself"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_boss_myself_nor"/>

        <TextView
            android:id="@+id/tv_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"/>


    </LinearLayout>

</LinearLayout>
