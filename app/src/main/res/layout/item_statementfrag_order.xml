<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dd_dimen_20px"
    android:orientation="vertical"
    android:background="@drawable/img_orderfinish_bg"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_sf_numtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="订  单  号:"/>

        <TextView
            android:id="@+id/tv_sf_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_numtag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="订单号"/>

        <TextView
            android:id="@+id/tv_sf_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_order_num"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间:"/>

        <TextView
            android:id="@+id/tv_sf_order_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_order_time"
            android:layout_alignBottom="@+id/tv_sf_order_time"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"
        android:layout_marginTop="@dimen/dd_dimen_10px">

    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px">


        <TextView
            android:id="@+id/tv_sf_order_pronametag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="项目名称:"/>

        <TextView
            android:id="@+id/tv_sf_order_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_order_pronametag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="项目名称"/>


        <TextView
            android:id="@+id/tv_sf_pztypetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sf_order_pronametag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="上钟方式:"/>

        <TextView
            android:id="@+id/tv_sf_pztype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_pztypetag"
            android:layout_alignBottom="@+id/tv_sf_pztypetag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="上钟方式"/>


        <TextView
            android:id="@+id/tv_sf_khidenttag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sf_pztypetag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="客户身份:"/>

        <TextView
            android:id="@+id/tv_sf_khident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_khidenttag"
            android:layout_alignBottom="@+id/tv_sf_khidenttag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="7.7:"/>




        <TextView
            android:id="@+id/tv_sf_jspricetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sf_khidenttag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="结算金额:"/>

        <TextView
            android:id="@+id/tv_sf_jsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_jspricetag"
            android:layout_alignBottom="@+id/tv_sf_jspricetag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text="10000"/>


        <TextView
            android:id="@+id/tv_sf_order_tctag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sf_jspricetag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="提成金额:"/>

        <TextView
            android:id="@+id/tv_sf_order_tcprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_sf_order_tctag"
            android:layout_alignBottom="@+id/tv_sf_order_tctag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:textColor="@color/tab_bg"
            android:text="1000"/>



    </RelativeLayout>

</LinearLayout>
