<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <include layout="@layout/activity_main_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:id="@+id/tv_tradedetail_tradetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="入账金额"/>

        <TextView
            android:id="@+id/tv_tradedetail_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/tab_bg"
            android:textSize="18sp"
            android:text="+9999"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:layout_marginLeft="@dimen/dd_dimen_50px"
        android:background="@color/viewline">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/viewline"
            android:text="交易金额"/>

        <TextView
            android:id="@+id/tv_tradedetail_trademoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="9999元"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/viewline"
            android:text="手续费"/>

        <TextView
            android:id="@+id/tv_tradedetail_poundage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="9999元"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/viewline"
            android:text="类型"/>

        <TextView
            android:id="@+id/tv_tradedetail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="充值"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/viewline"
            android:text="交易时间"/>

        <TextView
            android:id="@+id/tv_tradedetail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="2016.09.09"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_50px"
        android:paddingRight="@dimen/dd_dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/viewline"
            android:text="交易单号"/>

        <TextView
            android:id="@+id/tv_tradedetail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text=""/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:background="@color/viewline">
    </View>



</LinearLayout>
