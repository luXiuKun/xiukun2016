<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorWhite"
    >

    <include layout="@layout/title_forgetpw"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_bg"
        android:layout_marginTop="@dimen/dd_dimen_40px"
        android:layout_gravity="center_horizontal"
        android:text="@string/restartpw"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:layout_marginLeft="@dimen/dd_dimen_70px">
        
        <TextView
            android:id="@+id/tv_newpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="新  密  码"/>
        
        <EditText
            android:id="@+id/et_newpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15sp"
            android:maxLength="14"
            android:layout_toRightOf="@+id/tv_newpw"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:inputType="textPassword"
            android:hint="6-14位字母或者数字组合"/>

        <ImageView
            android:id="@+id/img_restartpw_newpwsee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_pw_see"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dd_dimen_70px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:background="@color/gray_line"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        >

    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:layout_marginLeft="@dimen/dd_dimen_70px">

        <TextView
            android:id="@+id/tv_confirmpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/et_confirmpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/tv_confirmpw"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:maxLength="14"
            android:hint="请在此确认密码"/>

        <ImageView
            android:id="@+id/img_restartpw_confirmpwsee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_pw_see"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dd_dimen_70px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:background="@color/gray_line"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        >

    </View>


    <ImageButton
        android:id="@+id/ib_restart_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:background="@drawable/img_confirm_bg"/>

</LinearLayout>
