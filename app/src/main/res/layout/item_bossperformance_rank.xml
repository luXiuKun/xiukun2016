<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dd_dimen_20px"
    android:paddingBottom="@dimen/dd_dimen_20px"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >


    <TextView
        android:id="@+id/tv_bossrank_rank"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text=""/>

    <TextView
        android:id="@+id/tv_bossrank_proname"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text=""/>


    <TextView
        android:id="@+id/tv_bossrank_ordercount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text=""/>

</LinearLayout>
