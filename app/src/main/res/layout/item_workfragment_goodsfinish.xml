<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dd_dimen_20px"
    android:orientation="vertical"
    android:background="@drawable/img_orderfinish_bg"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_goodsfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_goodsfinish"/>


        <TextView
            android:id="@+id/tv_goodsfinish_goodsname"
            android:layout_width="@dimen/dd_dimen_400px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_goodsfinish"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/green"
            android:text=""/>






    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"
        android:layout_marginTop="@dimen/dd_dimen_20px">

    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_20px">


        <TextView
            android:id="@+id/tv_goodsfinish_numtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="订  单  号:"/>

        <TextView
            android:id="@+id/tv_goodsfinish_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_numtag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="订单号"/>


        <TextView
            android:id="@+id/tv_goodsfinish_timetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_num"
            android:layout_alignBottom="@+id/tv_goodsfinish_num"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间:"/>

        <TextView
            android:id="@+id/tv_goodsfinish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_timetag"
            android:layout_alignBottom="@+id/tv_goodsfinish_timetag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="15sp"
            android:text="下单时间"/>





        <TextView
            android:id="@+id/tv_goodsfinish_goodsname1tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goodsfinish_numtag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="商品名称:"/>

        <TextView
            android:id="@+id/tv_goodsfinish_goodsname1"
            android:layout_width="@dimen/dd_dimen_400px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_goodsname1tag"
            android:layout_alignTop="@+id/tv_goodsfinish_goodsname1tag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:text=""/>







        <TextView
            android:id="@+id/tv_goodsfinish_pricetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goodsfinish_goodsname1"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="结算金额:"/>

        <TextView
            android:id="@+id/tv_goodsfinish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_pricetag"
            android:layout_alignBottom="@+id/tv_goodsfinish_pricetag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:textColor="@color/tab_bg"
            android:text="10000"/>


        <TextView
            android:id="@+id/tv_goodsfinish_tctag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goodsfinish_pricetag"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="16sp"
            android:text="销售提成:"/>

        <TextView
            android:id="@+id/tv_goodsfinish_tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goodsfinish_tctag"
            android:layout_alignBottom="@+id/tv_goodsfinish_tctag"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:text="1000"/>


         <ImageButton
             android:id="@+id/ib_goodsfinish_fz"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/tv_goodsfinish_tc"
           android:layout_alignParentRight="true"
           android:background="@drawable/img_ordervip_fz"/>



    </RelativeLayout>

</LinearLayout>
